<%= form_for :project, url: projects_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "100x10" %>
  </p>
  <p>
    <%= f.label :tag_list, "Tags (separated by commas)" %>
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </p>
<% end %>